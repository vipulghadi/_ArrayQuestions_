---------------------------fstarting from top---------------------------------------------------
bool canJump(vector<int>& nums) {
        int ind=nums.size()-1;
        for(int i=nums.size()-2;i>=0;i--)if(nums[i]+i>=ind)ind=i;
        return ind==0;
    }
-------------------------------------------------------------------------------------------------
   bool canJump(vector<int>& nums) {
        int maxReach=0;
        for(int i=0;i<nums.size()-1;i++)if(maxReach>=i)maxReach=max(maxReach,nums[i]+i);
        return maxReach>=nums.size()-1;
}
